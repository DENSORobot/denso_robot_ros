<launch>
  <!-- Communication type: tcp or udp -->
  <arg name="conn_type" default="tcp" />
  <param name="conn_type" value="$(arg conn_type)" />

  <!-- IP address -->
  <arg name="ip_address" default="192.168.0.1" />
  <param name="ip_address" value="$(arg ip_address)" />

  <!-- Port number -->
  <arg name="port_number" default="5007" />
  <param name="port_number" value="$(arg port_number)" />

  <!-- Timeout -->
  <arg name="timeout" default="3000" />
  <param name="timeout" value="$(arg timeout)" />

  <!-- Retry count -->
  <arg name="retry_count" default="5" />
  <param name="retry_count" value="$(arg retry_count)" />

  <!-- Wait time -->
  <arg name="wait_time" default="0" />
  <param name="wait_time" value="$(arg wait_time)" />

  <!-- Watch dog timer -->
  <arg name="watchdog_timer" default="400" />
  <param name="watchdog_timer" value="$(arg watchdog_timer)" />

  <!-- Invoke timeout -->
  <arg name="invoke_timeout" default="180000" />
  <param name="invoke_timeout" value="$(arg invoke_timeout)" />
</launch>
